<!-- Register -->
{{#if error}}
    <div
        class="fixed top-32 right-44 bg-error text-white text-sm px-4 py-2 rounded shadow-md toast p-8"
    >
        {{error}}
    </div>
{{/if}}
<section id="register-login-page" class="bg-white py-16">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-center">
            <div
                class="md:w-1/2 bg-white rounded-lg shadow-md p-4 md:p-10 md:m-10"
            >
                <h2 class="text-2xl font-semibold mb-4">Register</h2>
                <form action="/register.html" method="POST">
                    <!-- Action gửi đến /register.html -->
                    <div class="mb-3">
                        <label for="register-email" class="block">Email</label>
                        <input
                            type="email"
                            id="register-email"
                            name="email"
                            class="w-full px-3 py-1 border focus:border-transparent rounded-full focus:outline-none focus:ring-2 focus:ring-primary"
                            required
                        />
                    </div>
                    <div class="mb-3">
                        <label
                            for="register-password"
                            class="block"
                        >Password</label>
                        <input
                            type="password"
                            id="register-password"
                            name="password"
                            class="w-full px-3 py-1 border focus:border-transparent rounded-full focus:outline-none focus:ring-2 focus:ring-primary"
                            required
                        />
                    </div>
                    <div class="mb-3">
                        <label
                            for="register-confirm-password"
                            class="block"
                        >Confirm Password</label>
                        <input
                            type="password"
                            id="register-confirm-password"
                            name="confirm_password"
                            class="w-full px-3 py-1 border focus:border-transparent rounded-full focus:outline-none focus:ring-2 focus:ring-primary"
                            required
                        />
                    </div>
                    <button
                        type="submit"
                        class="bg-primary text-white border border-primary hover:bg-transparent hover:text-primary py-2 px-3 rounded-full w-full"
                    >Register</button>
                </form>
            </div>
        </div>
    </div>
</section>